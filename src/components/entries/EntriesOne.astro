---
const { title, url, description, pubDate, author, image } = Astro.props;
---

<li>
  <a href={url} title={title} class="group">
    <article
      class="relative h-full overflow-hidden rounded-3xl bg-gradient-to-tr from-onyx-950 to-onyx-700 border border-onyx-800 shadow-massive">
      <div class="block w-full lg:col-span-2">
        <img
          class="aspect-[384/246] rounded-t-2xl bg-onyx-900 object-cover bg-center h-full"
          src={image}
          alt={title}
        />
      </div>
      <div
        class="flex flex-col items-start justify-between flex-1 w-full p-4 lg:p-8">
        <div class="w-full">
          <p class="text-base font-medium leading-6 text-white">{title}</p>
          <p class="text-base text-onyx-300 line-clamp-2 mt-4">
            {description}
          </p>
        </div>
        <footer>
          <div
            class="inline-flex text-xs text-onyx-400 space-x-1 items-center mt-6">
            <p>
              {author}
            </p>
            <span aria-hidden="true">&middot;</span>
            <time datetime="2020-03-16"> {pubDate}</time>
          </div>
        </footer>
      </div>
    </article>
  </a>
</li>
