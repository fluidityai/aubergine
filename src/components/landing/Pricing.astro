const pricingPlans = [
  {
    title: "Monthly",
    price: "$7,999/m",
    description: "Pause or cancel anytime.",
    buttonLabel: "Subscribe to Monthly",
    buttonLink: "#_",
    features: [
      { name: "Unique one-page website design", available: true },
      { name: "Figma desktop & mobile designs", available: true },
      { name: "Figma file & styleguide", available: true },
      { name: "Video guide & overview", available: true },
      { name: "Hand-over support", available: true },
      { name: "Slack access", available: true },
      { name: "Live one-page website", available: false },
      { name: "Fully responsive", available: false },
      { name: "Subtle interactions", available: false },
      { name: "14 day post-launch support", available: false },
    ],
    classes:
      "shadow-big flex flex-col p-8 rounded-3xl bg-gradient-to-tr from-indigo-500 via-indigo-400 to-indigo-300",
    textClasses: "text-onyx-950",
    buttonClasses:
      " h-12 inline-flex items-center justify-center w-full px-6 py-3 text-sm text-center text-onyx-300 duration-500 ease-in-out transform border border-onyx-800 bg-onyx-900 rounded-xl shadow-massive focus:outline-none hover:bg-onyx-900 focus:ring-2 hover:text-onyx-300 focus:ring-offset-4 focus:ring-onyx-900",
  },
  {
    title: "Quarterly",
    price: "$15,499/m",
    description: "Save half per month.",
    buttonLabel: "Subscribe to Quarterly",
    buttonLink: "#_",
    features: [
      { name: "Unique one-page website design", available: true },
      { name: "Figma desktop & mobile designs", available: true },
      { name: "Figma file & styleguide", available: true },
      { name: "Video guide & overview", available: true },
      { name: "Hand-over support", available: true },
      { name: "Slack access", available: true },
      { name: "Live one-page website", available: true },
      { name: "Fully responsive", available: true },
      { name: "Subtle interactions", available: true },
      { name: "14 day post-launch support", available: false },
    ],
    classes:
      "flex flex-col p-8 rounded-3xl bg-onyx-900 ring-1 ring-onyx-800 shadow-big",
    textClasses: "text-white",
    buttonClasses:
      " h-12 inline-flex items-center justify-center w-full px-6 py-3 text-sm text-center duration-500 ease-in-out transform text-onyx-950-700 rounded-xl bg-gradient-to-tr shadow-massive from-indigo-500 via-indigo-400 to-indigo-300 hover:to-indigo-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-300",
  },
  {
    title: "Yearly",
    price: "$30,999/m",
    description: "Save a lot per month.",
    buttonLabel: "Subscribe to Yearly",
    buttonLink: "#_",
    features: [
      { name: "Unique one-page website design", available: true },
      { name: "Figma desktop & mobile designs", available: true },
      { name: "Figma file & styleguide", available: true },
      { name: "Video guide & overview", available: true },
      { name: "Hand-over support", available: true },
      { name: "Slack access", available: true },
      { name: "Live one-page website", available: true },
      { name: "Fully responsive", available: true },
      { name: "Subtle interactions", available: true },
      { name: "14 day post-launch support", available: true },
    ],
    classes:
      "flex flex-col p-8 rounded-3xl bg-onyx-900 ring-1 ring-onyx-800 shadow-big",
    textClasses: "text-white",
    buttonClasses:
      " h-12 inline-flex items-center justify-center w-full px-6 py-3 text-sm text-center duration-500 ease-in-out transform text-onyx-950-700 rounded-xl bg-gradient-to-tr shadow-massive from-indigo-500 via-indigo-400 to-indigo-300 hover:to-indigo-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-300",
  },
];
---

<section>
  <div class="px-8 py-24 mx-auto md:px-12 lg:px-36 max-w-7xl">
    <div
      class="lg:text-center max-w-xl lg:mx-auto"
      data-aos="fade-up"
      data-aos-duration="2000">
      <h3 class="text-4xl text-white font-display">Memberships levels</h3>
      <p class="text-onyx-300 mt-4">Choose a plan that's right for you.</p>
    </div>

    <div class="mt-24 grid md:grid-cols-2 lg:grid-cols-3 gap-2">
      {
        pricingPlans.map((plan) => (
          <div class={plan.classes}>
            <div>
              <p class={`flex items-baseline ${plan.textClasses}`}>
                <span class="text-2xl">{plan.title}</span>
              </p>
              <div class="py-5 border-b border-white/20">
                <div class="flex flex-col items-baseline">
                  <h3 class={`mt-6 text-2xl ${plan.textClasses}`}>
                    {plan.price}
                  </h3>
                  <p class={`mt-3 ${plan.textClasses} text-sm lg:texl-xl`}>
                    {plan.description}
                  </p>
                </div>
              </div>
              <div class="mt-8">
                <a
                  class={plan.buttonClasses}
                  href={plan.buttonLink}
                  title={plan.buttonLabel}
                  aria-label={plan.buttonLabel}>
                  {plan.buttonLabel}
                </a>
              </div>
              <ul class="order-last mt-10 flex flex-col gap-y-3 text-sm">
                {plan.features.map((feature) => (
                  <li
                    class={`flex items-center gap-2 ${feature.available ? plan.textClasses : "opacity-50 text-white"}`}>
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class={`icon icon-tabler icon-tabler-circle-${feature.available ? "check" : "x"}`}
                      width="20"
                      height="20"
                      viewBox="0 0 24 24"
                      stroke-width="2"
                      stroke="currentColor"
                      fill="none"
                      stroke-linecap="round"
                      stroke-linejoin="round">
                      <path
                        stroke="none"
                        d="M0 0h24v24H0z"
                        fill="none"
                      />
                      <circle
                        cx="12"
                        cy="12"
                        r="9"
                      />
                      {feature.available ? (
                        <path d="M9 12l2 2l4 -4" />
                      ) : (
                        <path d="M10 10l4 4m0 -4l-4 4" />
                      )}
                    </svg>
                    {feature.name}
                  </li>
                ))}
              </ul>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
