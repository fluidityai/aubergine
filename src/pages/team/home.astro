---
import { getCollection } from "astro:content";
const allPosts = await getCollection("team");
import BaseLayout from "@/layouts/BaseLayout.astro";
import TeamEntries from "@/components/team/TeamEntries.astro";
import HeaderGrid from "@/components/global/HeaderGrid.astro";
---
<BaseLayout>
  <section class="relative overflow-hidden">
    <HeaderGrid />
    <div
      class="px-8 pt-32 pb-24 mx-auto md:px-12 lg:px-36 lg:pt-64 max-w-7xl relative">
      <div
        class="text-center mx-auto"
        data-aos="fade-down"
        data-aos-duration="3000">
        <h1 class="text-4xl lg:text-5xl text-white font-display">
          Get to know out<span class="md:block text-onyx-400">
            powerful team.</span
          >
        </h1>
        <p class="text-onyx-300 mt-4">
          A team to have next to you all day everyday.
        </p>
      </div>
      <ul
        role="list"
        class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3 mt-24">
        {
          allPosts.map((post) => (
            <TeamEntries
              url={"/team/" + post.slug}
              name={post.data.name}
              role={post.data.role}
              avatar={post.data.avatar.url}
            />
          ))
        }
      </ul>
    </div>
  </section>
</BaseLayout>
